<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Supermarket App - Register</title>
  <link rel="stylesheet" href="/styles/styles.css">
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar">
    <a href="/" class="brand">ShopFood</a>
    <ul class="nav-links">
      <li><a href="/register">Register</a></li>
      <li><a href="/login">Login</a></li>
    </ul>
  </nav>

  <!-- Main Container -->
  <div class="container">
    <h1 class="page-title">Register</h1>

    <!-- Error Messages -->
    <% if (messages && messages.length> 0) { %>
      <div class="alert alert-danger">
        <% messages.forEach(message=> { %>
          <p>
            <%= message %>
          </p>
          <% }); %>
      </div>
      <% } %>

        <!-- Register Form -->
        <form action="/register" method="POST" class="form-card">
          <div class="form-group">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" required <% if (formData && formData.username) { %> value="
            <%= formData.username %>" <% } %> >
          </div>

          <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required <% if (formData && formData.email) { %> value="<%=
              formData.email %>" <% } %> >
          </div>

          <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>
          </div>

          <div class="form-group">
            <label for="address">Address:</label>
            <input type="text" id="address" name="address" required <% if (formData && formData.address) { %> value="<%=
              formData.address %>" <% } %> >
          </div>

          <div class="form-group">
            <label for="contact">Contact Number:</label>
            <input type="text" id="contact" name="contact" required <% if (formData && formData.contact) { %> value="<%=
              formData.contact %>" <% } %> >
          </div>

          <div class="form-group">
            <label for="role">Role:</label>
            <select id="role" name="role" required>
              <option value="user" <% if (formData && formData.role==='user' ) { %> selected <% } %>>User</option>
              <option value="admin" <% if (formData && formData.role==='admin' ) { %> selected <% } %>>Admin</option>
            </select>
          </div>

          <button type="submit" class="btn-auth">Register</button>
        </form>
  </div>

</body>

</html>